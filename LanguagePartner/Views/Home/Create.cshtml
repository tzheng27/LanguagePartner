@model LanguagePartner.Models.Learner
@{ 
    ViewBag.Title = "Create My Learning Profile";
}

<fieldset>
    <form asp-action="Create" asp-controller="Home">
        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" value="@User.Identity.Name" placeholder="@User.Identity.Name" readonly/>
        </div>

        <div class="form-group">
            <label asp-for="NativeLanuage"></label>
            <input asp-for="NativeLanuage" class="form-control" />
            <span asp-validation-for="NativeLanuage" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="SecondLanguage"></label>
            <input asp-for="SecondLanguage" class="form-control" />
            <span asp-validation-for="SecondLanguage" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="LearningLanguage"></label>
            <input asp-for="LearningLanguage" class="form-control" />
            <span asp-validation-for="LearningLanguage" class="field-validation-error"></span>
        </div>

        <br />
        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Create Learning Profile</button>
        </div>
    </form>
</fieldset>
